	function formatDate(date, format) {
		var year,month,day;
		const monthNames = ["", "Jan", "Feb", "Mar", "Apr", "May", "Jun",
		  "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"
		];
		year = date.getFullYear();
		month = date.getMonth()+1;
		day = date.getDate();

		if (format === 'MM/DD/YYYY') {
			if (month < 10)
				month = '0'+month;
			if (day < 10)
				day = '0'+day;
			date = month+'/'+day+'/'+year;
		}
		else if (format === 'YYYY-MM-DD') {
			if (month < 10)
				month = '0'+month;
			if (day < 10)
				day = '0'+day;
			date = year+'-'+month+'-'+day;
		}
		else if (format === 'mm DD, YYYY') {
			date = monthNames[month]+' '+day+', '+year;
		}
		else if (format === 'HH:m') {
			var hour = parseInt(date.getHours());
			var lbl;
			if (hour < 12)
				lbl = 'AM';
			else {
				lbl = 'PM';
			}

			if (hour == 0)
				hour = 12;
			else if (hour > 12)
				hour -= 12;

			date = hour+':'+(date.getMinutes() < 10 ? '0' : '') + date.getMinutes()+lbl;
		}
		else if (format == 'HH') {
			var hour = parseInt(date.getHours());
			var lbl;
			if (hour < 12)
				lbl = 'AM';
			else {
				lbl = 'PM';
			}

			if (hour == 0)
				hour = 12;
			else if (hour > 12)
				hour -= 12;

			date = hour+':'+'00'+lbl;
		}
		else if (format === 'YYYY-MM-DD : HH:m') {
			if (month < 10)
				month = '0'+month;
			if (day < 10)
				day = '0'+day;

			var hour = parseInt(date.getHours());
			var lbl;
			if (hour < 12)
				lbl = 'AM';
			else {
				lbl = 'PM';
			}

			if (hour == 0)
				hour = 12;
			else if (hour > 12)
				hour -= 12;

			date = year+'-'+month+'-'+day+' - '+hour+':'+(date.getMinutes() < 10 ? '0' : '') + date.getMinutes()+lbl;
		}

		return date;
	}

	function appendSoilMoisture(target, soil, farm_data) {
		var moisture = soil.moisture == ' N/A' ? 'N/A' : ' '+(Math.round(soil.moisture * 100) / 100 )+ '%';
		var color = 'text-muted';

		if (moisture != ' N/A') {
			var num = moisture;
			num = parseFloat(num.replace('%', ''));
			var ideal, stage = farm_data.stage;
			var matrix = [62, 59, 45, 35];
			if (stage == 'Vegetation') {
				if (farm_data.dat < 40) {
					ideal = 62;
				}
				else {
					ideal = 59;
				}
			}
			else if (stage == 'Reproductive') {
				ideal = 45;
			}
			else if (stage == 'Ripening') {
				ideal = 35;
			}
			else if (stage == 'Harvesting') {
				ideal = 40;
			}
			else {
				ideal = 'N/A';
			}
			console.log(ideal +' - '+num);
			if (ideal != 'N/A') {
				ideal = parseFloat(ideal);
				if (ideal - 7 <= num && ideal + 7 >= num) {
					color = 'text-success'
				}
				else if (ideal - 15 <= num && ideal + 15 >= num) {
					color = 'text-warning';
				}
				else {
					color = 'text-danger';
				}

			}

			$(`[${target}_help']`).html(`Ideal value: ${ideal}`);		
		}
		console.log(color);
		$(`[${target}']`).html(moisture);
		$(`[${target}']`).addClass(color);
		$(`[${target}_date']`).html('Last updated: '+formatDate(new Date(soil.dt), 'mm DD, YYYY'));
	}

