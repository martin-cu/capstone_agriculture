<div class="modal fade" id="resolveModal" role="dialog">
    <div class="modal-dialog modal-lg">
      <!-- Modal content-->
      <div class="modal-content">
            <div class="modal-header" ><h4 class="modal-title">Resolve Pest/Disease</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          
        </div>
        <div class="modal-body">
            <div class="card-body" id="step1_add" >
                <form id="resolve_form" action="/pest_and_disease/diagnose_details" method="post">
                    <div class="row">
                        <div class="col">
                            <div class="mb-3"><label class="form-label" for="username"><strong>Resolved Date</strong><br /></label></div>
                        </div>
                        <div class="col">
                            <div class="mb-3"><input class="form-control" type="date" placeholder="" id="date_solved" name="date_solved" form="resolve_form" value="{{cur_date}}"/><input class="form-control" type="text" placeholder="" id="id" name="id" form="resolve_form" value="{{details.diagnosis_id}}" hidden/>
                            </div>
                        </div>
                    </div>
                </form>
                
                    <div class="mb-3"><center><button type="submit" class="btn btn-primary btn-sm add-material-btn" style="margin-top : 20px;" form="resolve_form">Resolve</button></center></div>
                
            </div>

        </div>
 
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
      
    </div>
