<section class="vh-100">
  <div class="container-fluid" style="background-color: #F1E8D7;">
    <div class="row">
      <div class="col-sm-6 text-black">

        <div class="px-5 ms-xl-4">
          <i class="fa fa-sign-in fa-2x me-3 pt-5 mt-xl-4" style="color: #657429;"></i>
          <span class="h1 fw-bold mb-0">Welcome!</span>
        </div>

        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

          <form action="/login" method="post" style="width: 23rem;">

            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Log in</h3>

            <div class="form-outline mb-4">
              <label class="form-label" for="form2Example18"></label>
              <input type="text" id="username" name="username" class="form-control form-control-lg" placeholder="Username"/>
              
            </div>

            <div class="form-outline mb-4">
              <label class="form-label" for="form2Example28"></label>
              <input type="password" id="password" name="password" class="form-control form-control-lg" placeholder="Password"/>
              
            </div>

            <div class="pt-1 mb-4">
              <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>
            </div>

            <p class="small mb-5 pb-lg-2"><a class="text-muted" href="/reset_password">Forgot password?</a></p>

          </form>

        </div>

      </div>
      <div class="col-sm-6 px-0 d-none d-sm-block">
        <img src="../../images/LA-Rice-Mill.png"
          alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
      </div>
    </div>
  </div>
</section>