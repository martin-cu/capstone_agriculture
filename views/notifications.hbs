                                                        <p class="small text-dark" {{#if this.done}}style="font-weight: 700"{{else}}{{/if}}>{{this.notification_title}}</p>
                                                        <div class="text-dark small" style="font-size: 12px;">
                                                            {{this.notification_desc}}
                                                        </div>
                                                    </div>
                                                </a>
                                            {{/each}}
                                        </div>

                                        {{!-- TAB 4 --}}
                                        <div class="tab-pane fade" id="danger_notif" role="tabpanel" aria-labelledby="danger-tab">
                                            {{#each danger}}
                                                <a class="rounded mt-2 d-flex align-items-center notification" id="{{this.notification_id}}" href="{{this.url}}" style="padding: 10px; background: {{#if this.done}}#EEEEEE{{else}}#ffffff{{/if}};">
                                                    <div class="mr-3">
                                                        <div class="bg-{{this.color}} icon-circle"><i class="fas fa-{{this.icon}} text-white"></i></div>
                                                    </div>
                                                    <div>
                                                        <span class="small text-gray-500" {{#if this.done}}style="color: #7D7D7D !important; font-weight 700"{{else}}style="color: #7D7D7D !important"{{/if}}>{{this.date}}</span>
                                                        <p class="small text-dark" {{#if this.done}}style="font-weight: 700"{{else}}{{/if}}>{{this.notification_title}}</p>
                                                        <div class="text-dark small" style="font-size: 12px;">
                                                            {{this.notification_desc}}
                                                        </div>
                                                    </div>
                                                </a>
                                            {{/each}}
                                        </div>
                            </div>
                        </div>
                    </div>
        </div>
    </div>
    
</div>

