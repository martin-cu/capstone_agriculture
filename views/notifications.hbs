<div class="container-fluid">

        <div class="d-sm-flex justify-content-between align-items-center mb-4">
                        <h3 class="text-dark mb-0"Notifications</h3><a class="btn btn-primary disabled btn-sm d-none d-sm-inline-block" role="button" style="background: rgba(78,115,223,0);color: #332c1f;border-color: rgba(51,44,31,0);">&nbsp;<br>&nbsp;<i class="far fa-clock" style="margin-right: 5px;"></i>{{cur_date}}<br><br></a>
                    </div>
    
        <div class="row">

                <div class="col-lg-12 col-xl-12 col-xxl-12">

                    <div class="card shadow mb-4"  style="max-width: 1150px; margin: 0px auto;">

                        <div class="card-header d-flex justify-content-between align-items-center" style="height:auto">
                            
                            <ul class="nav nav-tabs card-header-tabs" id="nav-tab" role="tablist">
                                <li class="nav-item"><a id="notifs-tab" class="nav-link active" data-toggle="tab" href="#all_notifs"role="tab" aria-controls="notifs" aria-selected="true" 
                                    style="background: #F0F0F0;">ALL</a></li>

                                <li class="nav-item"><a id="primary-tab" class="nav-link" data-toggle="tab" href="#primary_notif" role="tab" aria-controls="primary" aria-selected="false" 
                                    style="background: #F0F0F0;">Primary</a></li>
                                <li class="nav-item"><a id="warning-tab" class="nav-link" data-toggle="tab" href="#warning_notif"role="tab" aria-controls="warning" aria-selected="false" 
                                    style="background: #F0F0F0;">Warning</a></li>
                                <li class="nav-item"><a id="danger-tab" class="nav-link" data-toggle="tab" href="#danger_notif"role="tab" aria-controls="danger" aria-selected="false" 
                                    style="background: #F0F0F0;">Danger</a></li>

                            </ul>

